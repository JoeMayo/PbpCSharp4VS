<Window x:Class="LINQ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="MenuListBox" HorizontalAlignment="Left" Height="172" Margin="10,35,0,0" VerticalAlignment="Top" Width="119"/>
        <TextBox x:Name="StartsWithTextBox" HorizontalAlignment="Left" Height="23" Margin="151,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="StartsWithTextBox_TextChanged"/>
        <ListBox x:Name="ResultsListBox" HorizontalAlignment="Left" Height="172" Margin="292,35,0,0" VerticalAlignment="Top" Width="216"/>
        <Label Content="Starts With:" HorizontalAlignment="Left" Margin="151,77,0,0" VerticalAlignment="Top"/>
        <Button x:Name="CreateXmlButton" Content="Create XML" HorizontalAlignment="Left" Margin="200,255,0,0" VerticalAlignment="Top" Width="85" Click="CreateXmlButton_Click"/>
        <Button x:Name="CreateObjectsButton" Content="Create Objects" HorizontalAlignment="Left" Margin="314,255,0,0" VerticalAlignment="Top" Width="85" Click="CreateObjectsButton_Click"/>
        <Button x:Name="ReadXmlButton" Content="Read XML" HorizontalAlignment="Left" Margin="85,255,0,0" VerticalAlignment="Top" Width="85" Click="ReadXmlButton_Click"/>

    </Grid>
</Window>
